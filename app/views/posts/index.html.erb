        
<div class="container user-block text-center buffer-top">
    <div class="row">
    	
        <% @posts.each do |post| %>

        <div class="row">
            <div class="col-md-4">
                
               <div class="scroller">
                    <% post.photos.each do |photo| %>
                   <div>
                        <%= image_tag(photo.url, :class => "post-photo") %>
                    </div>
                    <% end %>
               </div>
                
            </div>  

            <div class="col-md-8">
                <div class="post-block">
                    <div class="post-name">
                        <h1><%= post.name %> @ <%= @authors.find_by(id: post.user_id).username %></h1>  <br>
                        <%= link_to "Обсуждение", controller: "comments", action: "show", id: post.id %> (<%= post.comments.size %>)
                    </div>
                    <div class="post-text">
                        <p><%= post.text %></p> 
                    </div>
                </div>
            </div>
        </div>

    <% end %>
   
    </div>  
</div>
