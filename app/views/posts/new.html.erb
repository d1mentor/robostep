<div class="container text-center">
 <div class="row">
    <%= form_for @post do |f| %>

    <div class="field">
    <%= f.label :Название_поста %> <br>
    <%= f.text_field :name %>
    </div> 

    <div class="field">
    <%= f.label :Текст %> <br>
    <%= f.text_area :text %>
    </div> 

    <div class="field">
    <%= f.label :Фотографии %> <br>
    <%= f.file_field :photos, multiple: true, :style => "display: inline;" %>
    </div> 

    <div class="field">
    <%= f.label :Файлы %> <br>
    <%= f.file_field :files, multiple: true, :style => "display: inline;" %>
    </div> 

    <%= f.hidden_field :user_id %>

    <br>
    <%= f.submit "Создать пост" %>

    <% end %>
 </div>   
</div>    