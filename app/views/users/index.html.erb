<div class="container user-block text-center">
 <div class="row">
 	<h2>@<%= @user.username %></h2> 
</div>
<div class="row">
    <div class="col-md-4">
        <%= image_tag(user_avatar(@user).url, :class => "avatar") %>
    </div>
    <div class="col-md-8 text-center">
        <h3>Имя: <%= @user.name %></h3>
        <h3>Дружит с нами c <%= @user.created_at.strftime('%d.%m.%Y') %> </h3>
    </div>
    
    <% @posts.each do |post| %>

    <div class="field">
        <%= post.name %> <br>
        <%= post.text %>
    </div>

    <% end %>

</div>  
</div>